{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ],
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ],
    "source": "functions"
  },
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 3001
    },
    "functions": {
      "port": 3002
    },
    "firestore": {
      "port": 3003
    },
    "database": {
      "port": 3004
    },
    "hosting": {
      "port": 3005
    },
    "storage": {
      "port": 3006
    },
    "ui": {
      "enabled": true,
      "port": 3007
    }
  },
  "remoteconfig": {
    "template": "remoteconfig.template.json"
  }
}
